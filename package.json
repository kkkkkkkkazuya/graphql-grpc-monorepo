{
  "name": "graphql-grpc-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && go run main.go",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && go build"
  }
} 
